{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "eqeqeq": [
      "error"
    ],
    "no-alert": [
      "error"
    ],
    "no-implicit-globals": [
      "error"
    ],
    "comma-dangle": ["error", "never"],
    "no-trailing-spaces": ["error"]
  }
}